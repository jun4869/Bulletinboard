<h1>My Page for <%= @user.fullname %></h1>

<% if @students != nil %>
  <ul>
    <% @students.each { |st| %>
      <li><%= link_to st.fullname, user_path(st.id) %></li>
    <% } %>
  </ul>
<% end %>
<% if @posts != nil %>
  <% l = @posts.length; @posts.each_with_index {|post, i| %>
    <p><% (l-i).to_s + " : " + post.created_at.to_s %><br />
    <%= post.body %></p>
  <% } %>
<% end %>